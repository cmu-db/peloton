#
# src/test/out_err_mt/TEST1 -- unit test for error messages
#
export UNITTEST_NAME=out_err_mt/TEST1
export UNITTEST_NUM=1

# standard unit test setup
. ../unittest/unittest.sh

require_fs_type local
require_valgrind_dev_3_7

setup

unset PMEM_LOG_LEVEL
unset PMEMLOG_LOG_LEVEL
unset PMEMBLK_LOG_LEVEL
unset PMEMOBJ_LOG_LEVEL
unset VMEM_LOG_LEVEL

unset PMEM_LOG_FILE
unset PMEMLOG_LOG_FILE
unset PMEMBLK_LOG_FILE
unset PMEMOBJ_LOG_FILE
unset VMEM_LOG_FILE

expect_normal_exit valgrind --log-file=valgrind$UNITTEST_NUM.log --tool=drd\
    ./out_err_mt$EXESUFFIX $DIR/testfile1 $DIR/testfile2 $DIR/testfile3 $DIR

check

pass
