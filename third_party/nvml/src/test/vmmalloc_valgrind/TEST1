#
# src/test/vmmalloc_valgrind/TEST1 -- unit test for libvmmalloc valgrind
#
export UNITTEST_NAME=vmmalloc_valgrind/TEST1
export UNITTEST_NUM=1

# standard unit test setup
. ../unittest/unittest.sh

require_fs_type local pmem
# there's no point in testing statically linked builds
require_build_type debug nondebug
require_valgrind_dev_3_7
set_valgrind_exe_name

setup

unset VMMALLOC_LOG_LEVEL
unset VMMALLOC_LOG_FILE
export TEST_LD_PRELOAD=libvmmalloc.so

expect_normal_exit $VALGRINDEXE\
	--suppressions=excluded-errors.supp --leak-check=full\
	--show-reachable=yes --log-file=valgrind$UNITTEST_NUM.log\
	./vmmalloc_valgrind$EXESUFFIX 1

check

pass
