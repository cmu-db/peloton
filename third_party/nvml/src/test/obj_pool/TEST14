#
# src/test/obj_pool/TEST14 -- unit test for pmemobj_create
#
export UNITTEST_NAME=obj_pool/TEST14
export UNITTEST_NUM=14

# standard unit test setup
. ../unittest/unittest.sh

setup
umask 0

#
# TEST14 non-existing file, poolsize >= min required size
#        layout string is too long
#
LAYOUT=`dd if=/dev/urandom bs=1 count=768 2>/dev/null | base64 -w 0`

expect_normal_exit ./obj_pool$EXESUFFIX c $DIR/testfile $LAYOUT 20 0640

[ ! -f $DIR/testfile ] || {
    echo "error: $DIR/testfile not deleted"
    rm $DIR/testfile
    exit 1
}

check

pass
