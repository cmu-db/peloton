#
# src/test/obj_list_recovery/TEST2 -- unit test for list recovery process
#
export UNITTEST_NAME=obj_list_recovery/TEST2
export UNITTEST_NUM=2

# standard unit test setup
. ../unittest/unittest.sh

setup

truncate -s1M $DIR/testfile

rm -f log${UNITTEST_NUM}.log

function concat_log()
{
	cat out${UNITTEST_NUM}.log >> log${UNITTEST_NUM}.log
	rm out${UNITTEST_NUM}.log
}

# fail after finish flag is set in redo log
expect_normal_exit\
	../obj_list/obj_list$EXESUFFIX $DIR/testfile\
		n:1:0 n:1:0 n:1:0\
		P:1 R:2 P:2 R:2\
		F:after_finish\
		f:1:0:2

concat_log

# check
expect_normal_exit\
	../obj_list/obj_list$EXESUFFIX $DIR/testfile\
		P:1 R:1 P:2 R:2\
		V\
		P:1 R:1 P:2 R:2\

concat_log

# fail before finish flag is set in redo log
expect_normal_exit\
	../obj_list/obj_list$EXESUFFIX $DIR/testfile\
		F:before_finish\
		f:1:0:2

concat_log

# check
expect_normal_exit\
	../obj_list/obj_list$EXESUFFIX $DIR/testfile\
		P:1 R:1 P:2 R:2\
		V\
		P:1 R:1 P:2 R:2\

concat_log

# fail after redo_log_process
expect_normal_exit\
	../obj_list/obj_list$EXESUFFIX $DIR/testfile\
		F:after_process\
		f:1:0:2

concat_log

# check
expect_normal_exit\
	../obj_list/obj_list$EXESUFFIX $DIR/testfile\
		P:1 R:1 P:2 R:2\
		V\
		P:1 R:1 P:2 R:2\

concat_log

check

pass
