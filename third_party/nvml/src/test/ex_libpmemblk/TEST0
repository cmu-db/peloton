#
# src/test/ex_libpmemblk/TEST0 -- unit test for libpmemblk examples
#
export UNITTEST_NAME=ex_libpmemblk/TEST0
export UNITTEST_NUM=0

# standard unit test setup
. ../unittest/unittest.sh

require_build_type debug nondebug

setup

EX_PATH=../../examples/libpmemblk/assetdb

create_holey_file 32 $DIR/testfile1

expect_normal_exit $EX_PATH/asset_load $DIR/testfile1 ./asset_list.txt > out$UNITTEST_NUM.log 2>&1
expect_normal_exit $EX_PATH/asset_list $DIR/testfile1 >> out$UNITTEST_NUM.log 2>&1
expect_normal_exit $EX_PATH/asset_checkout $DIR/testfile1 2 Joe >> out$UNITTEST_NUM.log 2>&1
expect_normal_exit $EX_PATH/asset_list $DIR/testfile1 >> out$UNITTEST_NUM.log 2>&1
expect_normal_exit $EX_PATH/asset_checkin $DIR/testfile1 2 >> out$UNITTEST_NUM.log 2>&1
expect_normal_exit $EX_PATH/asset_list $DIR/testfile1 >> out$UNITTEST_NUM.log 2>&1

check

pass
