#
# src/test/obj_list_valgrind/TEST8 -- unit test for list module with valgrind
#
export UNITTEST_NAME=obj_list_valgrind/TEST8
export UNITTEST_NUM=8

# standard unit test setup
. ../unittest/unittest.sh

require_fs_type pmem non-pmem
require_valgrind_pmemcheck ../obj_list/obj_list

setup

truncate -s1M $DIR/testfile

expect_normal_exit valgrind --tool=pmemcheck\
	--log-file=valgrind$UNITTEST_NUM.log\
	../obj_list/obj_list$EXESUFFIX $DIR/testfile\
	n:1:0 n:1:0 n:1:0 n:1:0\
	P:1 R:1 P:2 R:2 P:3 R:3\
	e:-1:3:10:1\
	e:1:2:11:1\
	e:0:3:12:1\
	e:0:2:13:1\
	P:1 R:1 P:2 R:2 P:3 R:3

check

pass
